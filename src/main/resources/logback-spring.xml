<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative %-5level %logger - %msg %mdc%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="consoleAppender"/>
    </root>

    <springProfile name="apm">
        <appender name="rollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/var/apps/log/author.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>author-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>60</maxHistory>
                <totalSizeCap>2GB</totalSizeCap>
            </rollingPolicy>
            <!-- encoder is required -->
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"applicationName":"author-ms"}</customFields>
            </encoder>
    </appender>


        <root level="INFO">
            <appender-ref ref="rollingFileAppender" />
            <appender-ref ref="consoleAppender"/>
        </root>
    </springProfile>

    <logger name="org.springframework.web" level="DEBUG"></logger>
    <logger name="org.springframework.security" level="DEBUG"></logger>

</configuration>
